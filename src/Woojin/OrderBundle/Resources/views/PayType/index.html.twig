{% extends '::bootstrap.html.twig' %}

{% block body -%}
    <h1>付費方式列表</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>名稱</th>
                <th>折扣率</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('paytype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.discount }}</td>
                <td>
                    <a href="{{ path('paytype_edit', { 'id': entity.id }) }}">修改</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <a href="{{ path('paytype_new') }}" class="btn btn-primary">
        新增付費方式
    </a>       
{% endblock %}
