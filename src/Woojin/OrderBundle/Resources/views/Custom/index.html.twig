<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="UTF-8">
    <title>客戶搜尋頁面</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/bulma/css/bulma.css">

    <style>
    .page-container {
        margin: 10px 0 10px 0;
    }

    .super {
        background-color: blue;
        z-index: 999;
    }

    .timeline {
        border-left: 2px solid #c3c3c3;
        position: relative;
    }

    .timeline .timeline-item {
        border-color: #dee5e7;
        padding-bottom: 1px;
        position: relative;
        flex-grow: 0;
        flex-shrink: 0;
    }

    .timeline .timeline-item:after {
        background-color: #ffffff;
        border-color: #c3c3c3;
        border-radius: 10px;
        border-style: solid;
        border-width: 2px;
        bottom: 0;
        content: '';
        height: 14px;
        left: 0;
        margin-left: -8px;
        position: absolute;
        top: 5px;
        width: 14px;
    }

    .timeline .timeline-item:before {
        content: " ";
        display: table;
    }

    .timeline .timeline-item .timeline-item-content {
        margin-bottom: 15px;
        margin-left: 15px;
    }

    </style>
</head>
<body>
{% verbatim %}
<div id="app">
    <div class="container">

        <div class="columns">

            <div class="column is-3">
                <search-panel :search="conditions">
                    <template slot="buttons">
                        <button :class="searchButtonClass" @click="search(true)">
                            <i class="fa fa-search"></i>
                        </button>

                        <button class="button is-primary" @click="toggleNewModal(true)">
                            <i class="fa fa-plus"></i>
                        </button>

                        <button class="button is-light is-pulled-right" @click="resetConditions">
                            <i class="fa fa-refresh"></i>
                        </button>
                    </template>
                </search-panel>
            </div>

            <div class="column is-9">
                <br>
                <pagination @set-page="pageHandle"
                    :current-page="currentPage"
                    :pages="pages"
                    :totals="totals"
                ></pagination>

                <div class="columns">
                    <div class="column is-6">  
                        <div v-show="isLoadingCustoms" class="notification">                                
                            搜尋客戶中，請稍候...
                        </div>

                        <div v-show="!isLoadingCustoms" class="card" v-for="(custom, index) in customs" :key="custom.id">
                            <header class="card-header" @click="setCurrentIndex(index)">
                                <p class="card-header-title">
                                    {{ custom.name }}
                                </p>

                                <a class="card-header-icon">
                                    <span class="icon">
                                        <i class="fa fa-angle-down"></i>
                                    </span>
                                </a>
                            </header>
                            
                            <div class="card-content" v-if="isIndexMatched(index)">
                                <div class="content">
                                    <info :custom="custom"></info>
                                </div>
                            </div>
                            
                            <footer class="card-footer" v-if="isIndexMatched(index)">
                                <a class="card-footer-item" @click="toggleEditModal(true)">
                                    <i class="fa fa-edit"></i>                                
                                </a>
                            </footer>
                        </div>
                    </div>

                    <div class="column is-6">                           
                        <timeline v-show="!isLoadingOrders" :custom="selectedCustom"></timeline>

                        <div v-show="isLoadingOrders" class="notification">                                
                            讀取記錄中，請稍候...
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <modal :modal-class="newModalClass">
        <template slot="header">
            <p class="modal-card-title">新增客戶資訊</p>

            <button class="delete" @click="toggleNewModal(false)"></button>
        </template>

        <template slot="body">
            <new-form :custom="newCustom"></new-form>
        </template>

        <template slot="footer">
            <a class="button is-success">Save changes</a>
            <a class="button">Cancel</a>
        </template>
    </modal>

    <modal :modal-class="editModalClass">
        <template slot="header">
            <p class="modal-card-title">修改客戶資訊</p>

            <button class="delete" @click="toggleEditModal(false)"></button>
        </template>

        <template slot="body">
            <new-form :custom="selectedCustom"></new-form>
        </template>

        <template slot="footer">
            <a class="button is-success">Save changes</a>
            <a class="button" @click="toggleEditModal(false)">Cancel</a>
        </template>
    </modal>
</div>

{% endverbatim %}

<script src="https://cdn.jsdelivr.net/lodash/4.17.4/lodash.min.js"></script>
