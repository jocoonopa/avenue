{% macro checkbox(label, entitys, name, column) %}

{% import _self as checkbox %}

<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading_{{ name }}">
        <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse_{{ name }}" aria-expanded="false" aria-controls="collapse_{{ name }}">
        {{ label }}
        </a>
        </h4>
    </div>
    <div id="collapse_{{ name }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_{{ name }}">
        <div class="panel-body">
            <div class="checkbox">
                {{ checkbox.checkWidget(entitys, name, column) }}
            </div>
        </div>
    </div>
</div>

{% endmacro %}

{% macro text(label, entitys, name) %}

<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading_{{ name }}">
        <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse_{{ name }}" aria-expanded="false" aria-controls="collapse_{{ name }}">
