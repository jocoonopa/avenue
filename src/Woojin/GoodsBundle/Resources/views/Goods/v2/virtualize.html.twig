<form 
    name="to_behalf" 
    action="{{ path('admin_goods_behalflize', {id: goods.id}) }}" 
    method="POST" 
    role="form" 
    onsubmit="return confirm('您確定要將{{goods.name }}轉換為虛擬商品嘛?');"
    class="mt-10"
>
    <input type="hidden" name="_method" value="PUT" />
    <input type="hidden" name="_token" value="{{ csrf_token('to_behalf') }}" />
    <button type="submit" class="btn btn-default pull-right to-behalf">轉為虛擬商品(代購用)</button>
</form>