{% extends '::bootstrap.html.twig' %}

{% block body -%}
    <h1>促銷活動</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{{ entity.createAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{{ entity.updateAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Startat</th>
                <td>{{ entity.startAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Stopat</th>
                <td>{{ entity.stopAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Istimeliness</th>
                <td>{{ entity.isTimeliness }}</td>
            </tr>
            <tr>
                <th>Isdisplay</th>
                <td>{{ entity.isDisplay }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Thread</th>
                <td>{{ entity.thread }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ entity.discount }}</td>
            </tr>
            <tr>
                <th>Gift</th>
                <td>{{ entity.gift }}</td>
            </tr>
            <tr>
                <th>建立人員</th>
                <td>{% if entity.user %}{{ entity.user.username }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('promotion') }}">
           回到列表
        </a>
    </li>
    <li>
        <a href="{{ path('promotion_edit', { 'id': entity.id }) }}">
            編輯
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
