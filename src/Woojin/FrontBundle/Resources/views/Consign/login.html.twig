{% extends '::bootstrap.html.twig' %}

{% block body %}

<div class="panel panel-default mt-30">
    <!-- Default panel contents -->
    <div class="panel-heading">客戶寄賣查詢登入頁</div>
    <div class="panel-body">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>帳號或密碼有錯誤喔 ! </strong>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>成功登出! </strong>
            </div>
        {% endfor %}

        <form action="{{ path('consign_login_confirm') }}" role="form" method="post" >
            <div class="form-group">
                <label for="username">帳號</label>
                <input type="text" id="username" class="form-control" name="mobil" placeholder="請輸入帳號" />
                </div>
            <div class="form-group">
                <label for="password">密碼</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼" />
            </div>

            <div class="form-group">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('consign_custom') }}">
                <button type="submit" class="btn btn-default pull-right"><i class="icon-arrow-right"></i>登入</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}