{% extends 'WoojinFrontBundle::base.html.twig' %}

{% block title %}門市介紹{% endblock %}

{% block header %}{% if not isMobile() %}{{ parent() }}{% endif %}{% endblock %}
{% block footer %}{% if not isMobile() %}{{ parent() }}{% endif %}{% endblock %}

{% block body %}

<!--=== Content Part ===-->
<div class="container content">
    <div class="row">
        <!-- Begin Content -->
        <div class="col-md-12">
            {% if isMobile() %}
                <a href="javscript:" class="btn-u btn-u-dark" onclick="window.history.back();"><span class="glyphicon glyphicon-chevron-left"></span></a>
            {% endif %}
            {% for store in stores %}
                <!-- Bordered Funny Boxes -->
                <div class="funny-boxes {% if loop.index % 2 == 0 %}funny-boxes-right-u{% else %}funny-boxes-colored funny-boxes-grey{% endif %}">
                    <div class="row">
                        <div class="col-md-4">
                            <div id="carousel-example-generic-{{ store.id }}" class="carousel slide" data-ride="carousel">
                              <!-- Indicators -->
                              <ol class="carousel-indicators">
                                {% for i in 0..0 %}
                                    <li data-target="#carousel-example-generic-{{ store.id }}" data-slide-to="{{i}}" class="active border-radius-10"></li>
                                {% endfor %}
                              </ol>

                              <!-- Wrapper for slides -->
                              <div class="carousel-inner" role="listbox">
                                {% for i in 1..1 %}
                                <div class="item {% if loop.first %}active{% endif %}">
                                  <img src="/img/store_photo/{{ store.sn }}/{{ i }}.jpg" class="width-100-per" alt="{{ store.name }}門市照片">
                                  <div class="carousel-caption"></div>
                                </div>
                                {% endfor %}
                              </div>

                              <!-- Controls -->
                              <a class="left carousel-control" href="#carousel-example-generic-{{ store.id }}" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="right carousel-control" href="#carousel-example-generic-{{ store.id }}" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <h2><a href="#">{{ store.name }}</a></h2>
                            <ul class="list-unstyled funny-boxes-rating">
                               <li><span class="fa fa-star {% if loop.index % 2 == 1 %}white{% endif %}"></i></span>
                               <li><span class="fa fa-star {% if loop.index % 2 == 1 %}white{% endif %}"></i></span>
                               <li><span class="fa fa-star {% if loop.index % 2 == 1 %}white{% endif %}"></i></span>
                               <li><span class="fa fa-star {% if loop.index % 2 == 1 %}white{% endif %}"></i></span>
                               <li><span class="fa fa-star {% if loop.index % 2 == 1 %}white{% endif %}"></i></span>
                            </ul>
                            
                            <p>聯絡電話:&nbsp;&nbsp;{{ store.phone }}</p>
                            <p>營業時間:&nbsp;&nbsp;{{ store.openRegion }}</p>
                            {% set aClass = (loop.index % 2) ? 'white' : 'black-555' %}
                            <p>聯絡信箱:&nbsp;&nbsp;<a class="{{ aClass }}" href="mailto:{{ store.mail }}">{{ store.mail }}</a></p>
                            <p>門市地址:&nbsp;&nbsp;<a class="{{ aClass }}" href="https://www.google.com.tw/maps/place/{{ store.address }}" target="_blank">{{ store.address }}</a></p>
                        </div>
                    </div>                            
                </div>  
            {% endfor %}
        </div>
        <!-- End Content -->
    </div>          
</div><!--/container-->     
<!--=== End Content Part ===-->
{% endblock %}
