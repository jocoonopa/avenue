{% block jsExec %}
<script>
$("#manual-purchase").steps({
    headerTag: "h3",
    bodyTag: "section",
    transitionEffect: "slideLeft",
    transitionEffectSpeed: 500,
    labels: {
        cancel: "取消",
        current: "目前步驟:",
        pagination: "頁籤",
        finish: "完成",
        next: "下一步",
        previous: "上一步",
        loading: "處理中 ..."
    }
