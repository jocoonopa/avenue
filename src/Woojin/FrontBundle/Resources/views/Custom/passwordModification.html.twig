{% extends 'WoojinFrontBundle::base.html.twig' %}

{% block title %}重設密碼{% endblock %}

{% block header %}{% if not isMobile() %}{{ parent() }}{% endif %}{% endblock %}
{% block footer %}{% if not isMobile() %}{{ parent() }}{% endif %}{% endblock %}

{% block body %}

<div class="row mt-30 mb-30">
    <div class="col-md-2 hidden-xs"></div>
    <div class="col-md-8 col-xs-12">
        {% for flashMessage in app.session.flashbag.get('success') %}
           <div class="alert alert-success" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
               {{ flashMessage }}
           </div> 
        {% endfor %}

        {% if isMobile() %}
            <a href="javscript:" class="btn-u btn-u-dark" onclick="window.history.back();"><span class="glyphicon glyphicon-chevron-left"></span></a>
        {% endif %}

        {{ form_start(edit_form) }}
        <header>填寫您的新密碼</header>

        <fieldset>
            {{ form_errors(edit_form) }}

            <section>
                {{ form_label(edit_form.password.first, '密碼', {'attr': {'class': 'label'}}) }}
                <label class="input">
                    {{ form_errors(edit_form.password.first) }}
                    {{ form_widget(edit_form.password.first, {
                        'required': true,
                        'attr': {
                            'placeholder': '請輸入新密碼(至少各一位英文字母、數字,長度 6 ~ 25 個字元)',
                            'class': 'form-control'
                        }
                    }) }}
                </label>
            </section>

            <section>
                {{ form_label(edit_form.password.second, '確認密碼', {'attr': {'class': 'label'}}) }}
                <label class="input">
                    {{ form_errors(edit_form.password.second) }}
                    {{ form_widget(edit_form.password.second, {
                        'required': true,
                        'attr': {
                            'placeholder': '請確認密碼',
                            'class': 'form-control'
                        }
                    }) }}
                </label>
            </section>

            <section>
                <button type="submit" class="btn-u btn-u-default btn-block margin-bottom-20">確認</button>
            </section>
        </fieldset>
        {{ form_end(edit_form) }}
    </div>
    <div class="col-md-2 hidden-xs"></div>
</div>
{% endblock %}