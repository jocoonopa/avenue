<form id="sky-form1" action="{{ path('front_custom_verifyLogin') }}" class="log-reg-block sky-form" method="POST">
        
    {% for flash in app.session.flashbag.get('error') %}
    <div class="alert alert-danger alert-dismissible fade in" role="alert">      
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <span>{{ flash }}</span>       
    </div>
    {% endfor %}

    {% if routeName == 'front_payment_checkout' %}
    <div class="alert alert-info alert-dismissible fade in" role="alert">      
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
        <span>請登入會員已繼續結帳 <small>(&nbsp; 建議使用 &nbsp; <strong class="c-pointer" onclick="$('.avenue-fb-login').click();">Facebook</strong> &nbsp;一鍵註冊登入 &nbsp;)</small></span>       
    </div>
    {% endif %}
    
    <h2>
        會員登入
    </h2>
    
    <div class="row">
        <div class="col-xs-12 mb-10">
            <div class="input login-input">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-user"></span></span>
                    <input type="email" placeholder="您註冊的電子郵件信箱" name="email" class="form-control">
                </div>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="input login-input no-border-top">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-lock"></span></span>
                    <input type="password" placeholder="請輸入您的密碼" name="password" class="form-control">
                </div>    
            </div>
        </div>
    </div>

    <div class="row margin-bottom-5">
        <div class="col-xs-6"></div>
        <div class="col-xs-6 text-right">
            <a href="{{ path('front_custom_passwordMail') }}">忘記密碼</a>
        </div>
    </div>
    <input type="hidden" name="avenue_token" value="{{ csrf_token('custom_login') }}" >
    <button class="btn-u btn-u-sea-shop btn-block margin-bottom-20" type="submit">登入</button>

    <div class="border-wings">
        <span>or</span>
    </div>
        
    <div class="row columns-space-removes">
        <div class="col-lg-12 margin-bottom-10">
            <a href="{{ getFBLoginUrl() }}" class="btn-u btn-u-md btn-u-fb btn-block avenue-fb-login"><span class="fa fa-facebook"></span> Facebook 登入 | 註冊</a>
        </div>
    </div>

    <div class="row columns-space-removes">
        <div class="col-lg-12 margin-bottom-10">
            <a href="#" id="googleplus" class="btn btn-u-md btn-block avenue-googleplus">
                <span class="fa fa-google-plus"></span> Google+ 登入 | 註冊
            </a>
        </div>
    </div>
</form>

<div class="margin-bottom-20"></div>
<p class="text-center">尚未建立帳號嘛?&nbsp;&nbsp;<a href="{{ path('front_custom_register') }}">請按這裡註冊</a></p>