{% macro with(goods) %}

<ul class="list-inline shop-product-social">
    {# Facebook #}
    <li>
        <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?s=100&amp;p[url]={{ url('front_product_show', {id: goods.id}) }}&amp;p[images][0]={% if goods.img %}{{ app.request.schemeAndHttpHost ~ goods.img.path }}{% endif %}&amp;p[title]={{ goods.brand.name ~ ' ' ~ goods.pattern.name ~ ' ' ~ goods.name }}&amp;p[summary]={% if goods.brief %}{{ goods.brief.content }}{% endif %}"><span class="fa fa-facebook"></span>
        </a>
    </li>
    
    {# Twitter #}
    <li>
        <a target="_blank" href="https://twitter.com/intent/tweet?url={{ url('front_product_show', {id: goods.id}) }}&amp;text={{ goods.brand.name ~ ' ' ~ goods.pattern.name ~ ' ' ~ goods.name }}&amp;via=avenue"><span class="fa fa-twitter"></span></a>
    </li>

    {# Goole+ #}
    <li><a target="_blank" href="https://plus.google.com/share?url={{ url('front_product_show', {id: goods.id}) }}"><span class="fa fa-google-plus"></span></a></li>

    {# Pinterest #}
    <li>
        <a target="_blank" href="javascript:void((function() { e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)})());"><span class="fa fa-pinterest"></span></a>
    </li>
</ul>
{% endmacro %}