{% macro with(user) %}
<ul class="list-inline shop-badge badge-lists badge-icons pull-right">
    <li>
        <a href="#"><span class="cart-only fa fa-shopping-cart"></span></a>
        <span class="cart-count badge badge-sea rounded-x"></span>
        <ul id="scrollbar" class="list-unstyled badge-open contentHolder">
            <li class="loading hidden">
                <div class="cart-spinner">
                    <div class="cart-spinner-container cart-container1">
                        <div class="circle1"></div>
                        <div class="circle2"></div>
                        <div class="circle3"></div>
                        <div class="circle4"></div>
                    </div>
                    <div class="cart-spinner-container cart-container2">
                        <div class="circle1"></div>
                        <div class="circle2"></div>
                        <div class="circle3"></div>
                        <div class="circle4"></div>
                    </div>
                    <div class="cart-spinner-container cart-container3">
                        <div class="circle1"></div>
                        <div class="circle2"></div>
                        <div class="circle3"></div>
                        <div class="circle4"></div>
                    </div>
                </div>
            </li>

            <li class="subtotal">
                <div class="overflow-h margin-bottom-10">
                    <span>總和</span>
                    <span class="pull-right subtotal-cost" id="cart-cost"></span>
                </div>
                <div class="row">    
                    <div class="col-xs-6">
                        <a href="javascript: void(0);" class="empty-avenue-cart btn-u btn-u-sea-shop btn-block">清空購物車</a>
                    </div>

                    <div class="col-xs-6">
                        {# {% if app.user %} #}
                            {% if app.session.get('custom') %} 
                                {% set _custom = app.session.get('custom')|json_decode %}  
                                
                                {% if _custom.is_active == 0 %}
                                    <a href="{{ path('front_profile_activeMail_send') }}" class="btn-u btn-brd btn-brd-hover btn-u-sea-shop btn-block">請點此完成認證</a>
                                {% else %}
                                    <a href="{{ path('front_payment_checkout') }}" class="btn-u btn-brd btn-brd-hover btn-u-sea-shop btn-block">前往結帳</a> 
                                {% endif %}
                            {% else %}
                                <a href="{{ path('front_custom_login', {'routeName': 'front_payment_checkout'})}}" class="btn-u btn-brd btn-brd-hover btn-u-sea-shop btn-block">前往結帳</a>
                            {% endif %}
                        {# {% else %} #}

                        {# <button class="btn-u btn-brd btn-brd-hover btn-u-sea-shop btn-block" data-toggle="modal" data-target="#boardModal">結帳尚未開啟</button> #}
                        {# {% endif %} #}
                    </div>
                </div>        
            </li>   

            <li class="empty-cart-msg hidden text-center">
                <div class="row"> 
                    <div class="col-xs-12">
                        <span class="icon-custom rounded icon-bg-dark glyphicon glyphicon-warning-sign"></span>
                        <span class="display-inline">購物車沒有任何商品</span>
                    </div>
                </div>
            </li> 
        </ul>
    </li>
</ul>

<script type="text/template" id="cart-item">
    <li class="item">
        <a href="">
            <img src="" alt="">
        </a>
        
        <button type="button" class="close remove-from-cart" data-id="">×</button>
        <div class="overflow-h">
            <span><a class="product-name" href=""></a></span>
            <small></small>
        </div>    
    </li>
</script>

<script type="text/template" id="in-whishlist-tag">
<div class="in-whishlist-tag shop-rgba-yellow rgba-banner"><a href="#" class="color-white">已收藏</a></div>
</script>

{% endmacro %}