{% macro with(store) %}
<h2 class="thumb-headline">{{ store.name }}</h2>

<ul class="list-unstyled simple-list margin-bottom-20">
    <li>
        <a href="https://www.google.com.tw/maps/place/{{ store.address }}" target="_blank">{{ store.address }}</a>
    </li>
    <li>
        <a href="tel: {{ store.phone }}">{{ store.phone }}</a>
    </li>

    <li><a href="mailto:{{ store.mail }}">{{ store.mail }}</a></li>
    
    <li><a href="#">{{ store.openRegion }}</a></li>
</ul> 
{% endmacro %}