{% if 0 < products|length %}
<div class="content my-text-center">
    <a href="
        {% if app.request.get('page') > 1 %}
        {{ path('mobile_front_portfolio', {brand_id: app.request.get('brand_id'), pattern_group_id: app.request.get('pattern_group_id'), page: (app.request.get('page') - 1) }) }}
        {% else %}#{% endif %}" class="button button-grey my-page-button-padding">
        <i class="fa fa-chevron-left"></i>
    </a>

    {# <strong id="pager-text" class="my-page-text">{{ page ~ '/' ~ (count/perpage)|round(0, 'ceil') }}</strong> #}
    <select name="page" id="page" class="my-page-text" data-brand-id="{{ app.request.get('brand_id') }}" data-pattern-group-id="{{ app.request.get('pattern_group_id') }}" data-page="{{ app.request.get('page') }}">
        {% for i in 1 .. (count/perpage)|round(0, 'ceil') %}
            <option value="{{ i }}" {% if i == page %}selected{% endif %}>
                {{ i ~ '/' ~ (count/perpage)|round(0, 'ceil') }}
            </option>
        {% endfor %}
    </select>
    
    <a href="{% if app.request.get('page') < (count/perpage)|round(0, 'ceil') %}
        {{ path('mobile_front_portfolio', {brand_id: app.request.get('brand_id'), pattern_group_id: app.request.get('pattern_group_id'), page: (app.request.get('page') + 1) }) }}
    {% else %}#{% endif %}" class="button button-grey my-page-button-padding">
        <i class="fa fa-chevron-right"></i>
    </a>
</div>
{% endif %}