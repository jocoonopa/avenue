{% extends '::base.html.twig' %}

{% block body -%}
    <h1>OperationRecord</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Doat</th>
                <td>{{ entity.doAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Act</th>
                <td>{{ entity.act }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('operationrecord') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('operationrecord_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
