{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contractor list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Memo</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contractor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.memo }}</td>
                <td>{{ entity.contact }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contractor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contractor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contractor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
