{% extends '::bootstrap.html.twig' %}

{% block body %}

<style>
body {
    background-color: #C5C5C5;
}
</style>

<div class="panel panel-default mt-30">
    <!-- Default panel contents -->
    <div class="panel-heading">香榭後台登入頁面</div>
    <div class="panel-body">
        {% if error %}
            <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong>帳號或密碼有錯誤喔 ! </strong>
            </div>
        {% endif %}

        <form action="{{ path('login_check') }}" role="form" method="post" >
            <div class="form-group">
                <label for="username">帳號</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="請輸入帳號" />
                </div>
            <div class="form-group">
                <label for="password">密碼</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="請輸入密碼" />
                <input type="hidden" name="_target_path" value="/order" />
            </div>

            <div class="form-group">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-default pull-right"><i class="icon-arrow-right"></i>登入</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}